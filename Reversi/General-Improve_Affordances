  border-color: #3b3b3b;
}

fieldset fieldset,
fieldset dl dl,
form blockquote.userstuff,
form.verbose legend,
.verbose form legend {
  background: #3d3d3d;
}

input,
textarea {
  background: #333;
}

input,
textarea {
  box-shadow: inset 0 1px 2px #111;
}

form.verbose legend,
